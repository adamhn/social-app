@using Microsoft.AspNet.Identity
@model SocialApp.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Explore";
}

@if (Request.IsAuthenticated)
{
    <div class="users-profile-container">
        <img src="@Url.Action("GetUserPhoto", "Users" , new { UserId=@Model.CurrentUser.Id })" alt="Profile Picture" class="users-profile-thumbnail">
        <h3 class="page-title">Hi <strong>@Model.CurrentUser.Firstname</strong>, let's find new people.</h3>
    </div>
    <hr />
}
else
{
    <h3 class="page-title">Hi there, welcome to SocialMeet.</h3>
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5">
    @foreach (var user in Model.Users)
    {
        <div class="explore-user-item col mb-3">
            <a class="text-dark" href="@Url.Action("Details", "Users", new { userId=user.Id })">
                <img class="card-img-top" src="@Url.Action("GetUserPhoto", "Users" , new { UserId=user.Id })" />
                <h6 class="explore-user-name">@user.Firstname @user.Lastname</h6>
            </a>
        </div>
    }
</div>
